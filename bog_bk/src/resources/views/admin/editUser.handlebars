<div class="mt-4">
    <h3>Thay đổi role người dùng </h3>
    <form class="mt-4" method="POST" action="/admin/edit/{{userEdit._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên người dùng</label>
            <input type="text" class="form-control" value="{{userEdit.name}}" id="name" name="name" readonly>
        </div>

         <div class="form-group">
            <label for="email">Email</label>
            <input type="text" class="form-control" value="{{userEdit.email}}" id="email" name="email" readonly>
        </div>

        <div class="form-group">
            <label for="role">Role</label>
            <input type="text" class="form-control" value="{{userEdit.role}}" id="role" name="role">
        </div>

        <button type="submit" class="btn btn-primary">Lưu  lại cập nhật</button>
    </form>
</div>