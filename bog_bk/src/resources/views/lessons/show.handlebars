<div class="mt-4">
    <div class="mt-4">
        <h3 class="mt-4">Khóa học {{course.name}}</h3>
        <p>{{course.description}}</p>
        
    </div>

    <div class="row">
         <div  class="col-9">
            <iframe width="100%" height="500" src="https://www.youtube.com/embed/{{lesson.videoId}}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>

        <div class="col">
            <div class="list-group">
                <a href="#" class="list-group-item list-group-item-action disabled list-group-item-title" >
                    {{!-- thêm css vào phần header sau  --}}
                    Danh sách bài học 
                </a>

                {{#each lessons}}
                <a href="/courses/lessons/{{this.slug}}" class="list-group-item list-group-item-action">{{this.name}}</a>
                {{/each }}
            </div>

            {{#if (edit user.role)}}
                <div>
                    <a href="/courses/lessons/create" class=" mt-1 list-group-item  "> thêm bài học</a>
                </div>
            {{/if}}
        </div>
    </div>

    <div class="mt-4">  
        <h3>{{lesson.name}}</h3>
        <p>{{lesson.description}}</p>
    </div>
</div>
